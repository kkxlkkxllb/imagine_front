@import './mixin'
@import './base'
@import './icon'
@import './card'

bar-height = 60px
foot-height = 70px
c1 = #3498db
c2 = #2980b9

.start.active
	max-height bar-height
	height bar-height
	background c1
	fixed()
	padding-top 10px
	border-bottom 1px dashed c2
	.banner
		top 0
		margin 0
		position relative
		height 100%
		.title
			font-size 30px
			line-height bar-height
		.avatar
			vertical-middle-auto()
			left 5px
			height 40px
			img
				width 40px
		.info,.sub_title
			display none
.start
	height 100%
	unselectable()
	&:active
		background c2
	.banner
		text_center()
		position absolute
		top 30%
		margin-top -36px
		.sub_title
			font-size 26px
			text-shadow-inset()
		.title
			font-size 60px
			text-shadow-inset()
		.login
			display block
			font-size 60px
			text-shadow-inset()
			text-decoration none
		.topic
			margin 20px 0
			padding 20px 0
			background c2
			border-top 2px dashed c1
			border-bottom 2px dashed c1
		.desc
			text-shadow-inset()
			font-size 16px
		.avatar
			margin-top 15px
			img
				border-radius 7px
				width 60px
		.info
			text-shadow-inset()
.badge
	display block
	position absolute
	width 20px
	height 20px
	top 50%
	left 50%
	line-height 20px
	background c2
	border-radius 10px
	font-size 16px
.modal
	display none
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 999
	background rgba(41, 128, 185,0.8)
.foot_nav
	bottom 0px
	height foot-height
	fixed()
	background c1
	border-top 1px dashed c2
	unselectable()
	ul
		margin 0
		padding 0
		li
			list-style-type none
			display table-cell
			width 1%
			text-align center
			line-height foot-height
			font-size 30px
			text-shadow-inset()
			position relative
			&:active
				background c2
#help
	text-shadow-inset()
	.h_title
		text_center()
		padding-top 30px
	p
		padding 0 10px
