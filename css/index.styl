@import './mixin'

@font-face
   	font-family Dancing Script
   	font-style normal
   	src url('/font/Dancing Script.woff')
@font-face
   	font-family Lobster
   	font-style normal
   	src url('/font/Lobster.woff')
@font-face
  	font-family 'Pacifico'
  	font-style normal
  	src url('/font/Pacifico.woff')

.dancing
	font-family Dancing Script
.lobster
	font-family Lobster
.pacifico
	font-family Pacifico
body
	margin: 0
	padding: 0
section
	display: none
section.loaded
	display: block

html
	hbg-gradient(#1e5799,#2989d8)

.banner
	text-align: center
	font-size: 60px
	position: absolute
	width: 100%
	top: 50%
	color: white
	margin-top: -36px

p
	text-align: center
	font-size: 16px
