@import './mixin'

bg_color = #27ae60
tip_color = #2ecc71

.card_item
	position relative
	background bg_color
	.card_facade
		unselectable()
		vertical-middle 428px
		horizontal-center 320px
		img.u_word
			width 320px
			position absolute
			z-index 5
			top 0
			bottom 0
			margin auto
		.empty_tip
			font-size 36px
			vertical-middle 80px
			text_center()
			margin-top 40px
			color tip_color
			z-index 1
		.title
			z-index 9
			line-height 80px
			font-size 36px
			text-shadow-black()
			vertical-middle 80px
			text_center()

