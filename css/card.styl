@import './mixin'

bg_color = #27ae60
tip_color = #2ecc71
max_width = 320px
max_height = 428px

.card_item
	position relative
	background bg_color
	.card_facade
		unselectable()
		vertical-middle max_height
		horizontal-center max_width
		img.u_word
			width max_width
			vertical-middle-auto()
			z-index 5
			opacity 0
			transition opacity .3s ease-in
		.empty_tip
			font-size 36px
			vertical-middle 80px
			text_center()
			margin-top 40px
			color tip_color
			z-index 1
		.title
			line-height 80px
			font-size 36px
			text-shadow-black()
			vertical-middle 80px
			text_center()
			z-index 9
	.card_obverse
		display none

