@import './mixin'

c2 = #2980b9
c1 = #3498db
max_width = 320px
max_height = 428px
ctop = 70px

.card_item
	height max_height
	position absolute
	width 100%
	left 0
	top ctop
	visibility hidden
	.card_wraper
		position relative
		up3d_roll()
		width 100%
		height 100%
		background c2
		> div
			transition(all,0.5s,ease-in)
			-webkit-transform-origin 50% 50% 0px
			vertical-middle max_height
			horizontal-center max_width
			overflow hidden
		.card_facade
			transform rotateY(0deg)
			unselectable()
			opacity 1
			img.u_word
				width max_width
				vertical-middle-auto()
				z-index 5
				opacity 0
				transition opacity .3s ease-in
			.empty_tip
				font-size 36px
				vertical-middle 80px
				text_center()
				margin-top 40px
				color c1
				z-index 1
			.title
				line-height 80px
				font-size 36px
				text-shadow-black()
				vertical-middle 80px
				text_center()
				z-index 9
		.card_obverse
			transform rotateY(180deg)
			background c1
			text-shadow-inset()
			opacity 0
			.content
				padding 20px 20px 0 20px
				font-size 16px
			ul.sentence
				margin 0
				padding 10px 20px 0 20px
				list-style none
				li
					margin 10px 0
					padding 0 10px
					border-left 4px solid c2
	.card_wraper.obverse
		.card_facade
			transform rotateY(-180deg)
			opacity 0
		.card_obverse
			transform rotateY(0deg)
			opacity 1
