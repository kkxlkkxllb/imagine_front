@import './mixin'

bg_color = #27ae60
tip_color = #2ecc71
obverse_bg = #3498db
obverse_text = #2980b9
max_width = 320px
max_height = 428px

.card_item
	.card_wraper
		position relative
		up3d_roll()
		width 100%
		height 100%
		background bg_color
		> div
			transition(all,0.5s,ease-in)
			-webkit-transform-origin 50% 50% 0px
			vertical-middle max_height
			horizontal-center max_width
		.card_facade
			transform rotateY(0deg)
			unselectable()
			img.u_word
				width max_width
				vertical-middle-auto()
				z-index 5
				opacity 0
				transition opacity .3s ease-in
			.empty_tip
				font-size 36px
				vertical-middle 80px
				text_center()
				margin-top 40px
				color tip_color
				z-index 1
			.title
				line-height 80px
				font-size 36px
				text-shadow-black()
				vertical-middle 80px
				text_center()
				z-index 9
		.card_obverse
			transform rotateY(180deg)
			background obverse_bg
			text-shadow-inset()
			opacity 0
			.content
				padding 20px 20px 0 20px
				font-size 16px
			ul.sentence
				margin 0
				padding 10px 20px 0 20px
				list-style none
				li
					margin 10px 0
					padding 0 10px
					border-left 4px solid obverse_text
	.card_wraper.obverse
		.card_facade
			transform rotateY(-180deg)
		.card_obverse
			transform rotateY(0deg)
			opacity 1
